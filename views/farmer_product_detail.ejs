<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/productdetails.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    <div id="nav">
        <div id="logo"><img src="/images/assets/logo.png" alt=""></div>
        <div id="right">
            <a href="/home">Home</a><a href="/product">Products</a><a href="/bot">Bot</a><a href="/logout" id="logout">Logout</a>
        </div>
    </div>

    <div id="container">
        <div id="upper">
            <div id="left">
                <div id="lup"><img src="<%= product.productImage %>" alt=""></div>
                <div id="ldown">
                        <a href="/kisaan/place-order/<%= product._id %>">ORDER NOW</a>

                </div>
            </div>
            <div id="righty">
                <h1><%= product.title %></h1>
                <div id="data">
                    <div id="data-left">
                        <h3>PRODUCT COMPANY : <%= product.seller.company  %></h3>
                        <h3>PRICE : &#8377;<%= product.price  %></h3>
                        <h3>TYPE : <%= product.type %></h3>
                    </div>
                    <div id="data-right">
                        <h2 style="text-align: center; font-size: 3vw;">FEATURES</h2>
                        <p>
                            <%= product.features  %>
                        </p>
                        <h2 style="text-align: center; font-size: 3vw;">DESCRIPTION</h2>
                        <p>
                            <%= product.description  %>
                        </p>
                    </div>

                </div>
            </div>
        </div>
        <div id="bottom">
            <div id="bleft">
                <h2>REVIEW PRODUCT : </h2>
        </div>
            <div id="form">
                <form action="/kisaan/review/<%= product._id %>" method="post" enctype="multipart/form-data">
                    <label for="reviews">WRITE YOUR EXPERIENCE :</label>
                    <textarea name="reviews" id="" cols="30" rows="7"></textarea>
                    <label for="reviewImage">ADD IMAGE :</label>
                    <input type="file" name="reviewImage" id="">
                    <input type="submit" value="submit">
                </form>
            </div>
        </div>
        <div id="reviews">
            <h1>CUSTOMER'S REVIEW</h1>
            <div id="reviews">
                <h1>CUSTOMER'S REVIEW</h1>
                <% review.forEach((e)=>{ %>
                <div id="review">
                    <div id="rleft"><img src="<%= e.reviewImage %>" alt=""></div>
                    <div id="rright">
                        <div id="user">
                            <div id="name"><%= e.user.username %></div>
     
                            <div id="photo"><img src="<%= e.user.profileImage %>" alt=""></div>
                        </div>
                        <h3 id="name"><%= product.productName %></h3>
                        <div id="descr"><%= e.reviews %></div>
                    </div>
                </div>
                <% }) %>
            </div>

        </div>

    </div>

</body>
</html>