          max-width: 90%;
        }
    </style>

<body class="bg-gradient-to-r from-[#F28383] from-10% via-[#9D6CD2] via-30% to-[#481EDC] to-90% text-center">
    <div class="login-container">
      <div
        class="bg-blue-950 bg-opacity-50 shadow-xl max-w-[480px] grid grid-cols-1 items-center gap-5 p-10 rounded-2xl object-cover"
      >
        <h1 class="text-5xl font-bold text-white mb-5">Sign Up</h1>

        <form action="/officer/signup" method="post" class="space-y-6 text-white w-full">
          <div class="relative">
            <div
              class="absolute top-1 left-1 bg-white-medium rounded-full p-2 flex items-center justify-center text-blue-300"
            >
              <i class="ri-user-line"></i>
            </div>
            <input
            type="text" name="username" placeholder="username"
            class="w-full bg-white-light py-2 px-12 rounded-full focus:bg-black-dark focus:outline-none focus:ring-1 focus:ring-neon-blue focus:drop-shadow-lg"
            />
          </div>
          
          <div class="relative">
            <div
              class="absolute top-1 left-1 bg-white-medium rounded-full p-2 flex items-center justify-center text-blue-300"
            >
              <i class="ri-mail-line"></i>
            </div>
            <input
                type="email" name="email" placeholder="email"
                class="w-full bg-white-light py-2 px-12 rounded-full focus:bg-black-dark focus:outline-none focus:ring-1 focus:ring-neon-blue focus:drop-shadow-lg"
            />
          </div>
          <div class="relative">
            <div
              class="absolute top-1 left-1 bg-white-medium rounded-full p-2 flex items-center justify-center text-blue-300"
            >
              <i class="ri-building-4-line"></i>
            </div>
            <input
              type="text" name="fullName" placeholder="fullName"
              class="w-full bg-white-light py-2 px-12 rounded-full focus:bg-black-dark focus:outline-none focus:ring-1 focus:ring-neon-blue focus:drop-shadow-lg"
            />
          </div>
          <div class="relative">
            <div
              class="absolute top-1 left-1 bg-white-medium rounded-full p-2 flex items-center justify-center text-blue-300"
            >
              <i class="ri-building-4-line"></i>
            </div>
            <input
              type="text" name="designation" placeholder="designation"
              class="w-full bg-white-light py-2 px-12 rounded-full focus:bg-black-dark focus:outline-none focus:ring-1 focus:ring-neon-blue focus:drop-shadow-lg"
            />
          </div>
          <div class="relative">
            <div
              class="absolute top-1 left-1 bg-white-medium rounded-full p-2 flex items-center justify-center text-blue-300"
            >
              <i class="ri-lock-line"></i>
            </div>
            <input
            type="password" name="password" placeholder="password"
              class="w-full bg-white-light py-2 px-12 rounded-full focus:bg-black-dark focus:outline-none focus:ring-1 focus:ring-neon-blue focus:drop-shadow-lg"
            />
          </div>
          <input
            type="submit" value="submit"
            class="bg-gradient-to-r from-blue-400 to-cyan-200 w-full font-semibold rounded-full py-2"
          />
        </input>
        </form>
      </div>
    </div>
    
