<% include ./components/header.ejs %>
<div class="w-full h-screen bg-cover cover flex justify-center items-center ">
  <div class="w-[30vw] bg-blue-300 rounded-[30px]  px-7 py-10">
    <h1 class="text-3xl text-center font-semibold leading-none tracking-tight mb-8">Officer Registration</h1>
    <form action="/kisaan/signup" method="post">
      <input class="block rounded-md border-2 px-3 py-2 w-full my-2" type="text" name="username" placeholder="username">
      <input class="block rounded-md border-2 px-3 py-2 w-full my-2" type="text" name="fullName" placeholder="Full Name">
      <input class="block rounded-md border-2 px-3 py-2 w-full my-2" type="text" name="City" placeholder="City">
      <input class="block rounded-md border-2 px-3 py-2 w-full my-2" type="text" name="state" placeholder="State">
      <input class="block rounded-md border-2 px-3 py-2 w-full my-2" type="email" name="email" placeholder="Email">
      <input class="block rounded-md border-2 px-3 py-2 w-full my-2" type="number" name="contact" placeholder="Contact">
      <input class="block rounded-md border-2 px-3 py-2 w-full my-2" type="text" name="password" placeholder="Password">
      <input class="block rounded-full border-2 px-3 py-2 w-full bg-red-600  text-white " type="submit" value="Create New Account">
      <div class="flex items-center place-content-around">
        <a class="inline-block mt-2 text-sm font-semibold text-zinc-900 text-center bg-white-300 border-zinc-900 border-2 px-3 py-2 rounded-full w-32" href="/google"><i class="ri-google-fill"></i> GOOGLE</a>
        <a class="inline-block mt-2 text-sm font-semibold  text-zinc-100 text-center bg-blue-700 border-2 border-zinc-900 px-3 py-2 rounded-full w-32" href="/fb"><i class="ri-facebook-box-fill"></i> FACEBOOK</a>
      </div>
      <p class="text-xs font-semibold text-center mt-2 w-3/4 mx-auto ">By continuing, you agree to our App's all Term's and Conditions</p>
    </form>
    <a class="inline-block mt-2 text-sm font-semibold text-zinc-700 text-center w-full" href="/kisaan/login">Login existing Account</a>
   

  </div>

</div>

